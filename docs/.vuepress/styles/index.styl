// Gloabls
body {
  font-family: var(--font-family-sans);
}

// Tables
table {
  tr, th, td {
    border: none;
  }
  td:not(:last-of-type) {
    border-right: 1px solid var(--grey-200);
  }
  tr:nth-child(2n) {
    background-color: #fff;
  }
}

.theme-default-content code {
  color: var(--black-70);
}

