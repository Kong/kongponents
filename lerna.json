{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "4.0.1",
  "command": {
    "init": {
      "exact": true
    },
    "publish": {
      "ignoreChanges": [
        "**/*.md",
        "**/*.spec.js",
        "**/*.snap",
        "**/*.stories.js"
      ],
      "message": "chore(release): publish"
    }
  }
}
