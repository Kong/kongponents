{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es5",
      "dom"
    ],
    "types": [
      "cypress",
      "node",
      "./support"
    ]
  },
  "include": [
    "./support/index.d.ts",     // ensure your file is explicitly included
    "./**/*.cy.ts",
    "./**/*.d.ts"
  ]
}
