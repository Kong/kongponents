{
  "name": "kongcomponents",
  "version": "1.0.0",
  "description": "Kong Component library",
  "main": "index.js",
  "author": "Kong Inc.",
  "license": "ISC",
  "repository": "git@github.com:Kong/kongponents.git",
  "private": true,
  "bin": {
    "kpm": "./cli/index.js" 
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "styleguide": "vue-styleguidist server",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build": "yarn build:styleguide && yarn build:storybook",
    "build:styleguide": "vue-styleguidist build ./build",
    "build:storybook": "build-storybook -c .storybook -o ./docs/stories",
    "publish": "lerna publish --skip-git --npm-tag=latest",
    "publish:scope": "lerna publish --skip-git --npm-tag=latest --scope=@kongponents/${component}",
    "test": "yarn jest",
    "test-coverage": "yarn jest --coverage",
    "cli": "./cli/kongponent-cli"
  },
  "devDependencies": {
    "@storybook/addon-actions": "3.4.10",
    "@storybook/addon-knobs": "3.4.10",
    "@storybook/addon-links": "3.4.10",
    "@storybook/addon-notes": "3.4.10",
    "@storybook/vue": "3.4.10",
    "@vue/test-utils": "1.0.0-beta.20",
    "babel-core": "6.26.3",
    "babel-jest": "^23.6.0",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-3": "6.24.1",
    "chalk": "^2.4.1",
    "commander": "^2.17.1",
    "cross-env": "5.1.4",
    "css-loader": "0.28.11",
    "eslint": "5.3.0",
    "eslint-config-standard": "11.0.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jest": "21.21.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.1.0",
    "eslint-plugin-vue": "4.5.0",
    "file-loader": "1.1.11",
    "jest": "23.6.0",
    "jest-raw-loader": "^1.0.1",
    "jest-serializer-vue": "2.0.2",
    "lerna": "2.10.2",
    "raw-loader": "0.5.1",
    "storybook-addon-vue-info": "0.6.1",
    "vue-jest": "2.6.0",
    "vue-loader": "14.2.1",
    "vue-styleguidist": "1.7.5",
    "vue-template-compiler": "2.5.17",
    "vuex": "3.0.1"
  },
  "dependencies": {
    "vue": "2.5.17"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue",
      "svg"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cli/template"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      ".+\\.svg$": "jest-raw-loader"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/packages/$1"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "testURL": "http://localhost/",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/]"
    ]
  }
}
