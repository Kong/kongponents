{
  "name": "@kong/kongponents",
  "version": "0.0.0-development",
  "description": "Kong Component library",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kong/kongponents.git"
  },
  "homepage": "https://kongponents.konghq.com/",
  "main": "./dist/kongponents.umd.js",
  "module": "./dist/kongponents.es.js",
  "files": [
    "dist",
    "bin"
  ],
  "typings": "./dist/types",
  "bin": {
    "create-kongponent": "./bin/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/kongponents.es.js",
      "require": "./dist/kongponents.umd.js"
    }
  },
  "scripts": {
    "build:cli": "rm -rf ./bin && tsc --project ./cli/tsconfig.json && chmod u+x ./bin/index.js",
    "build:docs": "vuepress build docs",
    "build:kongponents": "vue-tsc --noEmit && vite build && vue-tsc --emitDeclarationOnly",
    "build:styles-NOT-NEEDED??": "sass --no-source-map ./src/styles/styles.scss ./src/styles/kongponents.css && postcss ./src/styles/kongponents.css --dir ./dist",
    "build": "yarn build:kongponents && yarn build:docs && yarn build:cli",
    "commit": "cz",
    "create-kongponent": "node ./bin/index.js",
    "dev": "vite",
    "docs:build": "vuepress build docs",
    "docs:dev": "vuepress dev docs",
    "lint": "eslint '**/*.{js,ts,vue}' --fix",
    "postinstall": "yarn build:cli",
    "preview": "vite preview",
    "test:open": "cypress open-ct",
    "test": "cypress run-ct"
  },
  "dependencies": {
    "popper.js": "^1.15.0",
    "swrv": "^0.9.6",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "vue": "^3.2.30",
    "vue-router": "4.0.12"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@cypress/vite-dev-server": "^2.2.2",
    "@cypress/vue": "^3.1.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "^7.2.0",
    "@types/inquirer": "^8.2.0",
    "@types/node": "^17.0.14",
    "@types/node-emoji": "^1.8.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "@vitejs/plugin-vue": "^2.2.0",
    "@vue/eslint-config-standard": "^6.1.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vuepress/plugin-back-to-top": "^2.0.0-beta.35",
    "@vuepress/plugin-search": "^2.0.0-beta.35",
    "autoprefixer": "^10.4.2",
    "boxen": "^5.1.2",
    "commitizen": "^4.2.4",
    "cypress": "^9.4.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.8.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^8.4.0",
    "inquirer": "^8.2.0",
    "nanospinner": "^1.0.0",
    "node-emoji": "^1.11.0",
    "picocolors": "^1.0.0",
    "postcss-cli": "^9.1.0",
    "postcss-custom-properties": "^12.1.4",
    "sass": "^1.49.4",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vue": "^3.2.30",
    "vue-router": "4.0.12",
    "vue-tsc": "^0.29.8",
    "vuepress": "^2.0.0-beta.35",
    "vuepress-plugin-sitemap": "^2.0.0-alpha.0"
  },
  "author": {
    "name": "Kong Inc.",
    "url": "https://konghq.com/"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "volta": {
    "node": "16.14.0",
    "yarn": "1.22.17"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "skipScope": false,
      "jiraOptional": true,
      "jiraLocation": "post-description",
      "jiraPrepend": "[",
      "jiraAppend": "]"
    }
  }
}
