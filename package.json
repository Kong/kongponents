{
  "name": "@kong/kongponents",
  "version": "0.0.0-development",
  "description": "Kong Component library",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kong/kongponents.git"
  },
  "homepage": "https://kongponents.konghq.com/",
  "main": "./dist/kongponents.umd.js",
  "module": "./dist/kongponents.es.js",
  "files": [
    "dist",
    "bin"
  ],
  "types": "dist/index.d.ts",
  "typings": "dist/types",
  "bin": {
    "create-kongponent": "./bin/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/kongponents.es.js",
      "require": "./dist/kongponents.umd.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "scripts": {
    "build:cli": "rimraf ./bin && tsc --project ./cli/tsconfig.json && chmod u+x ./bin/index.js",
    "build:docs": "vitepress build docs",
    "build:kongponents": "yarn typecheck && vite build && yarn copy:css-variables && vue-tsc -p './tsconfig.build.json' --emitDeclarationOnly",
    "copy:css-variables": "copyfiles -f src/styles/_variables.scss dist",
    "build": "yarn build:cli && yarn build:kongponents && yarn build:docs",
    "commit": "cz",
    "create-kongponent": "node ./bin/index.js",
    "dev": "vite",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:serve": "vitepress serve docs",
    "typecheck": "vue-tsc -p './tsconfig.build.json' --noEmit",
    "lint": "eslint '**/*.{js,ts,vue}'",
    "lint:fix": "eslint '**/*.{js,ts,vue}' --fix",
    "preview": "vite preview",
    "test": "cypress run --component -b chrome",
    "test:open": "cypress open --component -b chrome",
    "test:spec": "cypress run --component -b chrome --spec",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "date-fns": "^2.29.3",
    "date-fns-tz": "^1.3.7",
    "popper.js": "^1.15.0",
    "swrv": "^1.0.0",
    "uuid": "^8.3.2",
    "v-calendar": "^3.0.0-alpha.8",
    "vuedraggable@next": "^4.1.0"
  },
  "peerDependencies": {
    "axios": "^0.27.2",
    "vue": ">= 3.2.37"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@babel/types": "^7.20.0",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@cypress/vite-dev-server": "^4.0.1",
    "@digitalroute/cz-conventional-changelog-for-jira": "^7.3.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/inquirer": "^8.2.3",
    "@types/node": "17.0.45",
    "@types/node-emoji": "^1.8.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.44.0",
    "@vitejs/plugin-vue": "^2.3.4",
    "@vueuse/core": "^9.3.0",
    "autoprefixer": "^10.4.8",
    "boxen": "^5.1.2",
    "commitizen": "^4.2.5",
    "copyfiles": "^2.4.1",
    "cypress": "^11.0.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.28.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-vue": "^8.7.1",
    "inquirer": "^8.2.4",
    "nanospinner": "^1.1.0",
    "node-emoji": "^1.11.0",
    "picocolors": "^1.0.0",
    "postcss-cli": "^9.1.0",
    "postcss-custom-properties": "^12.1.8",
    "rimraf": "^3.0.2",
    "sass": "1.56.1",
    "semantic-release": "^19.0.5",
    "typescript": "4.9.3",
    "vite": "^3.2.3",
    "vitepress": "^1.0.0-alpha.28",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.9"
  },
  "author": {
    "name": "Kong Inc.",
    "url": "https://konghq.com/"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ]
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "volta": {
    "node": "16.15.1",
    "yarn": "1.22.17"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "skipScope": false,
      "jiraOptional": true,
      "jiraLocation": "post-description",
      "jiraPrepend": "[",
      "jiraAppend": "]"
    }
  }
}
