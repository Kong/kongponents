{
  "name": "kongponents",
  "version": "1.0.0",
  "description": "Kong Component library",
  "main": "index.js",
  "author": "Kong Inc.",
  "license": "Apache-2.0",
  "repository": "git@github.com:Kong/kongponents.git",
  "private": true,
  "bin": {
    "kpm": "./cli/index.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:styles && yarn build:utils && yarn docs:build && yarn build:cli",
    "build:postcss": "postcss packages/styles/styles.css --dir packages/styles",
    "build:cli": "lerna exec --ignore @kongponents/{styles,utils} \"ln ../../vue.config.js ./vue.config.js && ln ../../postcss-custom-properties.config.js ./postcss.config.js && yarn vue-cli-service build --target lib ./\\$(cat package.json | jq -r .source) --name \\$(cat package.json | jq -r .componentName) --dest dist && rm ./vue.config.js ./postcss.config.js\"",
    "build:styles": "yarn node-sass packages/styles/styles.scss -o packages/styles && yarn build:postcss",
    "build:utils": "yarn vue-cli-service build --target lib --entry ./packages/utils/utils.js --dest ./packages/utils/dist && rm ./packages/utils/dist/demo.html",
    "docs:dev": "yarn build:styles && vuepress dev docs",
    "docs:build": "vuepress build docs",
    "publish:ci": "lerna publish --conventional-commits --yes --force-publish",
    "test": "yarn jest",
    "test-coverage": "yarn jest --coverage",
    "cli": "./cli/kongponent-cli",
    "lint": "yarn run lint:js && yarn run lint:markdown",
    "lint:js": "yarn eslint --ext .js,.vue packages/",
    "lint:markdown": "yarn markdownlint ./docs/**/*.md",
    "lint:markdown:fix": "yarn markdownlint ./docs/**/*.md --fix",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@kawarimidoll/vuepress-plugin-tailwind": "^2.0.0",
    "@vue/cli-service": "^4.0.5",
    "@vue/test-utils": "1.0.0-beta.28",
    "@vuepress/plugin-search": "^1.5.4",
    "babel-eslint": "10.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-3": "^6.24.1",
    "chalk": "^2.4.1",
    "commander": "^2.17.1",
    "cross-env": "5.1.4",
    "css-loader": "0.28.11",
    "eslint": "5.3.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jest": "21.21.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.1.0",
    "eslint-plugin-vue": "4.5.0",
    "file-loader": "1.1.11",
    "husky": "^7.0.2",
    "jest": "23.6.0",
    "jest-raw-loader": "^1.0.1",
    "jest-serializer-vue": "2.0.2",
    "lerna": "4.0.0",
    "markdownlint-cli": "^0.29.0",
    "node-sass": "^4.11.0",
    "postcss-cli": "^6.1.2",
    "postcss-custom-properties": "^8.0.10",
    "raw-loader": "0.5.1",
    "sass-loader": "^7.1.0",
    "tailwindcss": "^1.4.6",
    "vue-jest": "3.0.2",
    "vue-loader": "15.7.0",
    "vue-router": "^3.0.7",
    "vue-template-compiler": "2.6.10",
    "vue-uuid": "^2.0.2",
    "vuepress": "^1.5.2",
    "vuepress-plugin-live": "^1.5.3",
    "vuepress-plugin-sitemap": "^2.3.1",
    "vuex": "3.0.1"
  },
  "dependencies": {
    "@vue/composition-api": "^1.2.4",
    "swrv": "^0.9.4",
    "vue": "2.6.10"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue",
      "svg"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cli/template"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      ".+\\.svg$": "jest-raw-loader"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/packages/$1"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "testURL": "http://localhost/",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules"
    ]
  }
}
