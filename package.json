{
  "name": "@kong/kongponents",
  "version": "0.0.0-development",
  "description": "Kong Component library",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kong/kongponents.git"
  },
  "homepage": "https://kongponents.konghq.com/",
  "main": "./dist/kongponents.umd.js",
  "module": "./dist/kongponents.es.js",
  "files": [
    "dist",
    "bin"
  ],
  "typings": "dist/types",
  "bin": {
    "create-kongponent": "./bin/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/kongponents.es.js",
      "require": "./dist/kongponents.umd.js"
    }
  },
  "scripts": {
    "build:cli": "rm -rf ./bin && tsc --project ./cli/tsconfig.json && chmod u+x ./bin/index.js",
    "build:docs": "vuepress build docs",
    "build:kongponents": "yarn typecheck && vite build && yarn copy:css-variables && vue-tsc --emitDeclarationOnly",
    "copy:css-variables": "copyfiles -f src/styles/_variables.scss dist",
    "build": "yarn build:kongponents && yarn build:docs && yarn build:cli",
    "commit": "cz",
    "create-kongponent": "node ./bin/index.js",
    "dev": "vite",
    "docs:build": "vuepress build docs",
    "docs:dev": "vuepress dev docs",
    "docs:preview": "yarn docs:build && echo \"\n    \\x1b[30m\\x1b[103m Note: The preview does NOT support hot module reload \\x1b[0m\" && yarn serve docs/.vuepress/dist",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint '**/*.{js,ts,vue}'",
    "lint:fix": "eslint '**/*.{js,ts,vue}' --fix",
    "preview": "vite preview",
    "test": "cypress run-ct",
    "test:open": "cypress open-ct",
    "test:spec": "cypress run-ct --spec",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "popper.js": "^1.15.0",
    "swrv": "^1.0.0-beta.8",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "axios": "^0.27.2",
    "vue": "^3.2.37",
    "vue-router": "4.0.12"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@cypress/vite-dev-server": "^2.2.3",
    "@cypress/vue": "^3.1.2",
    "@digitalroute/cz-conventional-changelog-for-jira": "^7.3.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/inquirer": "^8.2.1",
    "@types/node": "^17.0.42",
    "@types/node-emoji": "^1.8.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/eslint-config-standard": "^6.1.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vuepress/plugin-back-to-top": "^2.0.0-beta.48",
    "@vuepress/plugin-search": "^2.0.0-beta.48",
    "autoprefixer": "^10.4.7",
    "boxen": "^5.1.2",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cypress": "^9.7.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.17.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "inquirer": "^8.2.4",
    "nanospinner": "^1.1.0",
    "node-emoji": "^1.11.0",
    "picocolors": "^1.0.0",
    "postcss-cli": "^9.1.0",
    "postcss-custom-properties": "^12.1.8",
    "sass": "^1.52.3",
    "semantic-release": "^19.0.3",
    "serve": "^13.0.2",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "vue": "^3.2.37",
    "vue-router": "4.0.12",
    "vue-tsc": "^0.29.8",
    "vuepress": "^2.0.0-beta.48",
    "vuepress-plugin-sitemap": "^2.0.0-alpha.0"
  },
  "author": {
    "name": "Kong Inc.",
    "url": "https://konghq.com/"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md"
          ]
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "volta": {
    "node": "16.15.1",
    "yarn": "1.22.17"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "skipScope": false,
      "jiraOptional": true,
      "jiraLocation": "post-description",
      "jiraPrepend": "[",
      "jiraAppend": "]"
    }
  }
}
