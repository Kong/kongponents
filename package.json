{
  "name": "kongcomponents",
  "version": "1.0.0",
  "description": "Kong Component library",
  "main": "index.js",
  "author": "Kong Inc.",
  "license": "ISC",
  "repository": "git@github.com:Kong/kongponents.git",
  "private": true,
  "bin": {
    "kpm": "./cli/index.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn docs:build",
    "build:styles": "node-sass packages/styles/styles.scss -o packages/styles",
    "postcss": "postcss packages/styles/styles.css --dir packages/styles",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "publish": "lerna publish",
    "publish:ci": "lerna publish --yes",
    "test": "yarn jest",
    "test-coverage": "yarn jest --coverage",
    "cli": "./cli/kongponent-cli"
  },
  "devDependencies": {
    "@vue/test-utils": "1.0.0-beta.28",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-3": "^6.24.1",
    "chalk": "^2.4.1",
    "commander": "^2.17.1",
    "cross-env": "5.1.4",
    "css-loader": "0.28.11",
    "eslint": "5.3.0",
    "eslint-config-standard": "11.0.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jest": "21.21.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.1.0",
    "eslint-plugin-vue": "4.5.0",
    "file-loader": "1.1.11",
    "jest": "23.6.0",
    "jest-raw-loader": "^1.0.1",
    "jest-serializer-vue": "2.0.2",
    "lerna": "3.18.3",
    "node-sass": "^4.11.0",
    "postcss-cli": "^6.1.2",
    "postcss-custom-properties": "^8.0.10",
    "raw-loader": "0.5.1",
    "sass-loader": "^7.1.0",
    "vue-jest": "3.0.2",
    "vue-loader": "15.7.0",
    "vue-router": "^3.0.7",
    "vue-template-compiler": "2.6.10",
    "vuepress": "^1.0",
    "vuepress-plugin-live": "^1.2.0",
    "vuex": "3.0.1"
  },
  "dependencies": {
    "vue": "2.6.10"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue",
      "svg"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/cli/template"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      ".+\\.svg$": "jest-raw-loader"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/packages/$1"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ],
    "testURL": "http://localhost/",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules"
    ]
  }
}
